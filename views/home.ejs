
<section id="feed_posts">
    

    <h4>posts</h4>
    <% if(locals.user){%>
    <form action="/posts/create" id="feed-post-form" method="post">
        <textarea name="content" cols="30" rows="3" placeholder="Type here..." required></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>
    

</section>

<ul>
    
    <%for(var i of posts){  %> 
                   
      <li>             
          <div  style="display: flex; align-items: center; justify-content: space-around;">
            <span ><%=i.content%></span>
            <span><%=i.user.name%></span>
          </div> 
          <% if(locals.user){%>      
          <form action="/comments/create_comment" id="comment_post" method="post">
            <textarea name="content" placeholder="Type here..." required></textarea>
            <input type="hidden" name="post" value="<%=i._id%>">
            <input type="submit" value="Post">
        </form>
        <%}%>
        <div class="post-comments-list">
            <ul id="post-comments-<%=i._id%>">
                <%for(var j of i.comments){%>
                    <p>
                        <%= j.content%>
                        <br>
                        <small>
                            <%= j.user.name%>
                        </small>
                    </p>
                <%}%>
            </ul>

        </div>

    </li>           
    <%}%>    

</ul>
